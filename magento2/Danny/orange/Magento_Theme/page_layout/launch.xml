<?xml version="1.0"?>

<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="basic"/>
<!-- TAKEN FROM BASE EMPTY.XML -->
    <referenceContainer name="after.body.start" remove="true" />
    <referenceContainer name="page.wrapper">
        <container name="feature.page" as="feature_page" label="Feature Page" htmlTag="div" htmlClass="page" htmlId="feature-page" after="global.notices">
            <container name="section-1" label="Section 1" htmlTag="section" htmlClass="page-section" htmlId="section-1"/>
            <container name="section-2" label="Section 2" htmlTag="section" htmlClass="page-section" htmlId="section-2"/>
            <container name="section-3" label="Section 3" htmlTag="section" htmlClass="page-section" htmlId="section-3"/> 
        </container>
    </referenceContainer>

    <referenceContainer name="main.content" remove="true" />
</layout>
